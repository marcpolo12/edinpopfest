<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="EdinPopFest.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:EdinPopFest"
    Shell.FlyoutBehavior="Flyout"
    Shell.FlyoutWidth="140"
    Title="EdinPopFest">
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:InfoPage}"
        Route="InfoPage" />
    <ShellContent
        Title="Lineup"
        ContentTemplate="{DataTemplate local:BandsPage}"
        Route="BandsPage" />
    <ShellContent
        Title="About EIC"
        ContentTemplate="{DataTemplate local:AboutPage}"
        Route="AboutPage" />
    <ShellContent
        Title="Amenities"
        ContentTemplate="{DataTemplate local:AmenitiesPage}"
        Route="AmenitiesPage" />
    <ShellContent
        Title="Safe Space"
        ContentTemplate="{DataTemplate local:SafeSpacePage}"
        Route="SafeSpacePage" />
    

</Shell>
