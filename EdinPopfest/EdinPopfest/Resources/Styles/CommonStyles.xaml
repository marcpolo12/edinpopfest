<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
  <Style x:Key="LargeText" TargetType="Label">
    <Setter Property="HorizontalTextAlignment" Value="Start" />
    <Setter Property="VerticalTextAlignment" Value="Start" />
    <Setter Property="FontSize" Value="20" />
    <Setter Property="TextColor">
      <AppThemeBinding Light="Navy" Dark="Aquamarine" />
    </Setter>
    <Setter Property="FontAttributes" Value="Bold" />
    <Setter Property="Padding" Value="0" />
    <Setter Property="Margin" Value="10,20,10,0" />
  </Style>
  <Style x:Key="MedText" TargetType="Label" BasedOn="{StaticResource LargeText}">
    <Setter Property="FontSize" Value="18" />
    <Setter Property="TextColor">
      <AppThemeBinding Light="Tomato" Dark="Yellow" />
    </Setter>
    <Setter Property="Margin" Value="10,5,10,0" />
  </Style>
  <Style x:Key="LowMedText" TargetType="Label" BasedOn="{StaticResource MedText}">
    <Setter Property="FontSize" Value="17" />
    <Setter Property="TextColor">
      <AppThemeBinding Light="Indigo" Dark="BlanchedAlmond" />
    </Setter>
    <Setter Property="FontAttributes">
      <AppThemeBinding Light="Bold" Dark="None" />
    </Setter>
  </Style>
  <Style x:Key="SmallText" TargetType="Label">
    <Setter Property="HorizontalTextAlignment" Value="Start" />
    <Setter Property="VerticalTextAlignment" Value="Start" />
    <Setter Property="FontSize" Value="16" />
    <Setter Property="Margin" Value="10,10" />
    <Setter Property="FontAttributes">
      <AppThemeBinding Light="Bold" Dark="None" />
    </Setter>
  </Style>
  <Style x:Key="SmallSpanText" TargetType="Span">
    <Setter Property="FontSize" Value="16" />
    <Setter Property="FontAttributes">
      <AppThemeBinding Light="Bold" Dark="None" />
    </Setter>
  </Style>
  <Style x:Key="LinkText" TargetType="Label">
    <Setter Property="HorizontalTextAlignment" Value="Start" />
    <Setter Property="VerticalTextAlignment" Value="Start" />
    <Setter Property="FontSize" Value="Medium" />
    <Setter Property="Margin" Value="10,0" />
    <Setter Property="TextColor">
      <AppThemeBinding Light="MediumVioletRed" Dark="Yellow" />
    </Setter>
    <Setter Property="TextDecorations" Value="Underline" />
    <Setter Property="FontAttributes">
      <AppThemeBinding Light="Bold, Italic" Dark="None, Italic" />
    </Setter>
  </Style>
</ResourceDictionary>
